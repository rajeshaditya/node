  body
    section#container
      // header start
      header.header.black-bg
        .sidebar-toggle-box
          .fa.fa-bars.tooltips(data-placement='right', data-original-title='Toggle Navigation')
        // logo start
        a.logo(href='/dashbord')
           b
            img(src='myhub_logo.png',style='height:55px;width:100px;margin-top:-13px')
        // logo end
        .top-menu
          ul.nav.pull-right.top-menu
            li
              a.logout(href='/logout') Logout
      // header end
      //
        **********************************************************************************************************************************************************
        MAIN SIDEBAR MENU
        ***********************************************************************************************************************************************************
      // sidebar start
      aside
        #sidebar.nav-collapse
          // sidebar menu start
          ul#nav-accordion.sidebar-menu
            p.centered
              a(href='/dashbord')
                
                if user.profilepic
                  img.img-circle(src=user.profilepic, width='80')
                else
                  img.img-circle(src='img/user.jpg', width='80')
            h5.centered 
              p.sname= user.StaffName
            li.mt
              a.active(href='')
                i.fa.fa-tasks
                span Appraisel
          //
            li.mt
              a(href='#wall')
                i.fa.fa-tasks
                span Wall
          // sidebar menu end
      // sidebar end
      //
        **********************************************************************************************************************************************************
        MAIN CONTENT
        ***********************************************************************************************************************************************************
      // main content start
      section#main-content
        section.wrapper.site-min-height
          h3
            i
          .row.mt
            .col-lg-12
              .tab-content
                #appraisal.tab-pane.fade.in.active
                  if notstarted
                    h3=notstarted
                  else
                    .container
                      h3 REVIEW DATES
                      table.table.table-bordered
                        thead
                          tr
                            th ACTION
                            th DATE
                        tbody
                          tr
                            td Vice-Chairman
                            td 
                              if dates
                                p=dates.vcdate
                          tr
                            td Principal
                            td 
                              if dates
                                p=dates.principaldate
                          tr
                            td HOD
                            td 
                              if dates
                                p=dates.hoddate
                          tr
                            td FACULTY
                            td 
                              if dates
                                p=dates.facultydate
                    center
                      a(href='/appraisal')
                        button.btn.btn-default(type='submit', style='padding:15px; width:150px; background-color:#00aeed; color:white; font-size:16px;') Go to Appraisel
              #wall.tab-pane.fade
                .row
                  .col-lg-12
                    h1.page-header
                      span.glyphicon.glyphicon-pencil
                      |  Notice
                .row
                  .col-lg-12
                    .form-group
                      label Notes
                        textarea.form-control(rows='5', cols='45')
                      center
                        button.btn.btn-primary(type='submit') Save
                        button.btn.btn-success(type='reset') Reset
